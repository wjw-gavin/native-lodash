{
  "name": "fekt",
  "private": true,
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm store prune",
    "lint:staged": "nano-staged",
    "prepare": "husky install",
    "release:tskit": "pnpm -C packages/tskit run release"
  },
  "devDependencies": {
    "@types/node": "^24.10.13",
    "bumpp": "^10.4.1",
    "eslint": "^10.0.1",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "nano-staged": "^0.9.0",
    "prettier": "^3.8.1",
    "tsdown": "0.21.0-beta.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "nano-staged": {
    "*.{js,ts,json,md,mjs}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "pnpm": ">= 10"
  }
}
