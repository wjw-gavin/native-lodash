{
  "name": "native-lodash",
  "version": "1.0.0",
  "author": "Gavin",
  "license": "ISC",
  "description": "常用的原生js工具库",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "homepage": "https://github.com/wjw-gavin/native-lodash",
  "scripts": {
    "cz": "czg",
    "clean": "pnpm store prune",
    "lint:staged": "nano-staged",
    "prepare": "husky install",
    "dev": "rollup --c rollup.config.dev.js --watch",
    "build": "rollup --c rollup.config.build.js",
    "commit": "cz",
    "npmp": "node npmpublish",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "javascript",
    "lodash",
    "utilities"
  ],
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "cz-git": "^1.3.11",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "nano-staged": "^0.8.0",
    "prettier": "^2.7.1",
    "rollup": "^2.79.0",
    "rollup-plugin-dev": "^2.0.4",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.8.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "nano-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
